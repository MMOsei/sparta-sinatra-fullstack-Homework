<form action="/ikealovers<% if(@ikealover.id != '') %>/<%= @ikealover.id %><% end %>" method="post">

  <div>
    <label for="first_name">First Name</label>
    <input type="text" name="first_name" value="<%= @ikealover.first_name %>" placeholder="First Name">
  </div>
  <div>
    <label for="last_name">Last Name</label>
    <input type="text" name="model" value="<%= @ikealover.last_name %>" placeholder="Last Name">
  </div>
  <div>
    <label for="ikea_visits">Ikea Visits</label>
    <input type="text" name="year" value="<%= @ikealover.ikea_visits %>" placeholder="Ikea Visits">
  </div>

  <input type="submit" value="Submit">

  <% if(@ikealover.id != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>

</form>
