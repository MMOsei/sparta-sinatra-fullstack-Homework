<h1>Index Page</h1>

<table>
  <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Employer</th>
    <th>Salary</th>
    <th colspan='2'></th>
  </thead>
  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.first_name %></td>
        <td><%= worker.last_name %></td>
        <td><%= worker.employer %></td>
        <td><%= worker.salary %></td>
        <td><a href="/workers/<%= worker.id %>">See more</a></td>
        <td>
          <form class="" action="/workers/<%= worker.id %>" method="post">
            <input type="submit" name="" value="Delete">
            <input type="hidden" name="_method" value="DELETE">
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
